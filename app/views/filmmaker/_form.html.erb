<%= error_messages_for(@filmmaker) %>

<div class="row">
    <div class="col-md-12">
        <div class="well well-sm">
            <form class="form-horizontal" method="post">
                <fieldset>
                  <legend class="text-center header jumbotron"> <h1 class="update"><%= @filmmaker.firstName + " " + @filmmaker.lastName%></h1></legend>

                  <div class="form-group">
                      <label class="form-label col-md-1 col-md-offset-2 text-center" for="title">Name</label>
                      <div class="col-md-8">
                            <%= f.text_field(:firstName, :class=>"form-control", :id=>"first", onblur: "updateFilmJumbotron(\"update\", \"{0} {1}\", [\"first\",\"last\"])") %>
                            <%= f.text_field(:lastName, :class=>"form-control half-spacer", placeholder: "Last Name", :id=>"last", onblur: "updateFilmJumbotron(\"update\", \"{0} {1}\", [\"first\",\"last\"])") %>
                      </div>
                  </div>

                  <div class="form-group">
                      <label class="form-label col-md-1 col-md-offset-2 text-center spacer" for="title">Birthdate</label>
                      <div class="col-md-8 spacer">
                            <%= f.date_field(:birthDate, :class=>"form-control") %>
                      </div>
                  </div>

                  <div class="form-group">
                      <label class="form-label col-md-1 col-md-offset-2 text-center spacer">School</label>
                      <div class="col-md-8 spacer">
                        <div class="input-group">
                            <%= f.text_field(:school, :class=>"form-control") %>
                            <span class="input-group-addon">-</span>
                            <%= f.number_field(:year, step: 1, value: Time.now.year, :class=>"form-control") %>
                        </div>
                      </div>
                  </div>

                  <div class="form-group">
                      <label class="form-label col-md-1 col-md-offset-2 text-center spacer" for="title">Bio</label>
                      <div class="col-md-8 spacer">
                          <%= f.text_area(:bio, rows:"7", placeholder: "Tell me something interesting about this person?", :class=>"form-control") %>
                      </div>
                  </div>

                  <div class="spacer"><br></div>
                  <div class="form-group">
                      <label class="form-label col-md-1 col-md-offset-2 text-center spacer" for="trivia">Credits</label>
                      <div class="col-md-7 half-spacer">
                          <div id="role-container">
                            <% @filmmaker.roles.each do |rol| %>
                                <%= render(:partial => "role_field", :locals => {rol: rol}) %>
                            <% end %>
                        </div>
                        <div class="text-center">
                          <button class="btn btn-success btn-block half-spacer btn-add" type="button", onclick="addField('role-container', &quot;<%= @role_code %>&quot;)">
                            <span class="glyphicon glyphicon-plus"></span>
                          </button>
                        </div>
                      </div>
                  </div>

                  <div class="spacer"><br></div>

                  <div class="form-group">
                      <label class="form-label col-md-1 col-md-offset-2 text-center spacer" for="trivia">Trivia</label>
                      <div class="col-md-7 half-spacer">
                          <div id="trivia-container">
                            <% @filmmaker.trivia.each do |triv| %>
                                <%= render(:partial => "application/trivia_field", :locals => {triv: triv}) %>
                            <% end %>
                        </div>
                        <div class="text-center">
                          <button class="btn btn-success btn-block spacer btn-add" type="button", onclick="addField('trivia-container', &quot;<%= @trivia_code %>&quot;)">
                            <span class="glyphicon glyphicon-plus"></span>
                          </button>
                        </div>
                      </div>
                  </div>

                  <div class="form-group">
                      <div class="col-md-12 text-center spacer">
                          <button type="submit" class="btn btn-primary btn-lg btn-submit">Submit</button>
                      </div>
                  </div>

                </fieldset>
            </form>
    </div>
</div>
