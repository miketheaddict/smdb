<div class="film view">
  <div class="btn-group btn-group-justified" role="group" aria-label="...">
    <div class="btn-group" role="group">
      <%= link_to({:action => 'search'}, :class => 'back-link')do%>
        <button type="button" class="btn btn-primary "><span class="glyphicon glyphicon-chevron-left"></span> Back to Search</button>
      <% end %>
    </div>
    <div class="btn-group text-center" role="group">
      <h1><span class="glyphicon glyphicon-film"><br></span></h1>
    </div>
    <div class="btn-group" role="group">
      <%= link_to({:action => 'edit', :id => @film.id}, :class => 'action edit')do%>
        <button type="button" class="btn btn-success">Edit Film <span class="glyphicon glyphicon-pencil"></span></button>
      <% end %>
    </div>
  </div>
  <%= render(:partial => "details") %>
</div>
